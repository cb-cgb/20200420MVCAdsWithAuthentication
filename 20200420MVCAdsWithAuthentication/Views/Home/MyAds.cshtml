@using AdsAuth.Data;
@model IEnumerable<Ad>;



@if(@TempData["Message"] != null)
{
<div id="alert" class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    @TempData["Message"]
</div>
}


<div class="text-center">
    <h1>Ads Posted by @User.Identity.Name</h1>
</div>

<div class="row">

    <a href="/Home/NewAdForm" class="btn btn-success">New Ad</a>

    <table class="table table-bordered table-striped style=margin-top:20px">
        <tr>
            <th>Title</th>
            <th>Phone</th>
            <th>Text</th>
            <th>Posted By</th>
            <th></th>
        </tr>

        @foreach (Ad a in Model)
        {
            <tr>
                <td>@a.Title</td>
                <td>@a.Phone</td>
                <td>
                    <textarea rows="10">@a.Text</textarea>
                </td>
                <td>Posted by: @a.UserId  Current User:  @User.Identity.Name</td>
                <td>
                    <form method="post" action="/Home/DeleteAd">
                        <input type="hidden" name="Id" value="@a.Id" />
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>

            </tr>

        }
    </table>

</div>

